# Bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# Smart scheduling configuration
# Peak hours (6am-4pm): Check every 2 minutes when restocking is most likely
CHECK_INTERVAL_PEAK=120

# Normal hours (4pm-12am): Check every 10 minutes
CHECK_INTERVAL_NORMAL=600

# Downtime hours: No checking between 12am-6am (Amul rarely restocks at night)
DOWNTIME_START_HOUR=0
DOWNTIME_END_HOUR=6
PEAK_START_HOUR=6
PEAK_END_HOUR=16

# Legacy check interval (for backward compatibility)
CHECK_INTERVAL=120

# Database URL (default: sqlite+aiosqlite:///data/amul_bot.db)
DATABASE_URL=sqlite+aiosqlite:///data/amul_bot.db